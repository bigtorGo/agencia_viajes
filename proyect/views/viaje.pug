                        rect(x='8' y='15' width='2' height='2')

                    |#{datosViaje.fecha_ida} - #{datosViaje.fecha_vuelta}
                p
                    svg.mr-2.icon.icon-tabler.icon-tabler-cash-banknote(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#fd0061' fill='none' stroke-linecap='round' stroke-linejoin='round')
                        path(stroke='none' d='M0 0h24v24H0z' fill='none')
                        circle(cx='12' cy='12' r='3')
                        rect(x='3' y='6' width='18' height='12' rx='2')
                        line(x1='18' y1='12' x2='18.01' y2='12')
                        line(x1='6' y1='12' x2='6.01' y2='12')
                    |#{datosViaje.precio} Dolares

                p
                    svg.mr-2.icon.icon-tabler.icon-tabler-user(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#fd0061' fill='none' stroke-linecap='round' stroke-linejoin='round')
                        path(stroke='none' d='M0 0h24v24H0z' fill='none')
                        circle(cx='12' cy='7' r='4')
                        path(d='M6 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2')
    
